<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each.with_index do |article, index| %>
    <tr>
       <td><%= index + 1 %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td class="d-flex flex-row justify-content-center gap-2">
        <%= link_to "Show", article_path(article), class: "btn btn-info" %>
        <%= link_to "Update", edit_article_path(article), class: "btn btn-warning" %>
        <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-danger" %>
      </td>
      
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New article", new_article_path, class: "btn btn-success" %>
